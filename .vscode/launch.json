{
    "version": "0.2.0",
    "configurations": [
        {
            "name": ".NET Core Launch (full)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            // If you have changed target frameworks, make sure to update the program path.
            "program": "${workspaceFolder}/nbc-product-store/bin/Debug/net10.0/nbc-product-store.dll",
            "args": [],
            "cwd": "${workspaceFolder}/nbc-product-store/",
            "stopAtEntry": false,
            "internalConsoleOptions": "openOnSessionStart",
            "launchBrowser": {
                "enabled": false
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "https://localhost:7050;http://localhost:5171"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/nbc-product-store/Views"
            },
            "console": "internalConsole"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Chrome Launch",
            "url": "https://localhost:7050",
            "webRoot": "${workspaceFolder}/nbc-product-store/ClientApp"
        },
        {
            "type": "java",
            "name": "Java Launch",
            "request": "launch",
            "mainClass": "${file}",
            "projectName": "java-product-store"
        }
    ],
    "compounds": [
        {
            "name": "Build and Run App",
            "configurations": [
                ".NET Core Launch (full)",
                "Chrome Launch"
            ],
            "console": "internalConsole"
        }
    ]
}